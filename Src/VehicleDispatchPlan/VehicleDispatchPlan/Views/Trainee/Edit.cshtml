@model VehicleDispatchPlan.Models.T_Trainee

@{
    ViewBag.Title = "編集";
}

<h2>編集</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>教習生情報</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.TraineeId)

    @* 教習者名 *@
    <div class="form-group">
        @Html.LabelFor(model => model.TraineeName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TraineeName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TraineeName, "", new { @class = "text-danger" })
        </div>
    </div>

    @* 通学種別 *@
    <div class="form-group">
        @Html.LabelFor(model => model.AttendTypeCd, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.AttendTypeCd, (IEnumerable<SelectListItem>)ViewBag.SelectAttendType, "選択してください", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AttendTypeCd, "", new { @class = "text-danger" })
        </div>
    </div>
    
        @* 教習コース *@
        <div class="form-group">
            @Html.LabelFor(model => model.TrainingCourseCd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TrainingCourseCd, (IEnumerable<SelectListItem>)ViewBag.SelectTraining, "選択してください", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TrainingCourseCd, "", new { @class = "text-danger" })
            </div>
        </div>

        @* 入校予定日 *@
        <div class="form-group">
            @Html.LabelFor(model => model.EntrancePlanDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EntrancePlanDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EntrancePlanDate, "", new { @class = "text-danger" })
            </div>
        </div>

        @* 宿泊施設 *@
        <div class="form-group">
            @Html.LabelFor(model => model.LodgingCd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.LodgingCd, (IEnumerable<SelectListItem>)ViewBag.SelectLodging, "選択してください", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LodgingCd, "", new { @class = "text-danger" })
            </div>
        </div>

        @* エージェント *@
        <div class="form-group">
            @Html.LabelFor(model => model.AgentCd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.AgentCd, (IEnumerable<SelectListItem>)ViewBag.SelectAgent, "選択してください", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AgentCd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-default" />
            </div>
        </div>
</div>
}

<div>
    @Html.ActionLink("一覧", "List")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
